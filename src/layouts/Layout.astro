---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/style.scss";

interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
// const canonicalURL = new URL(Astro.url.pathname, '');
// const ogpImageURL = new URL(image, '');
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5, minimum-scale=1, user-scalable=yes" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Chisa's Portfolio | {title}</title>
    <meta name="description" content={description} />
    <meta name="format-detection" content="telephone=no" />
    <!-- ogp -->
    <meta property="og:title" content={"Chisa's Portfolio | " + title} />
    <meta property="og:description" content={description} />
    <!-- <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogpImageURL} /> -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Chisa's Portfolio" />
    <!-- / ogp -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;200;300;400;500;600;700;800&family=Poppins:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script is:inline src="/assets/js/swiper-bundle.min.js"></script>
    <script is:inline src="https://cdn.jsdelivr.net/gh/studio-freight/lenis@1.0.19/bundled/lenis.min.js"></script>
    
    <script is:inline src="https://unpkg.com/split-type"></script>
  </head>
  <body>
    <Header />
    <!-- マウスストーカー -->
    <div id="js-cursor"></div>
    <!-- / マウスストーカー -->
    <slot name="body" />
    <Footer />
    <script is:inline type="module" src="/assets/js/jquery-3.7.1.min.js"></script>
    <script src="https://unpkg.com/web-animations-js@2.3.2/web-animations.min.js"></script>
    <script src="https://unpkg.com/muuri@0.8.0/dist/muuri.min.js"></script>
    <script is:inline type="module" src="/assets/js/script.js"></script>
  </body>
</html>
